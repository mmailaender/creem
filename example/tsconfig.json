{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@convex-dev/creem": ["../src/client/index.ts"],
      "@convex-dev/creem/react": ["../src/react/index.tsx"],
      "@convex-dev/creem/convex.config": ["../src/component/convex.config.ts"],
      "@convex-dev/creem/test": ["../src/test.ts"],
      "@convex-dev/creem/_generated/component.js": [
        "../src/component/_generated/component.ts"
      ]
    },
    "noEmit": true
  },
  "include": ["./src", "vite.config.ts"]
}
